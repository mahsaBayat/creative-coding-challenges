{
  "name": "bro-template-node",
  "version": "0.0.0",
  "description": "Bro template for creating Node.js projects with Codeship deployments.",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel --out-dir lib --copy-files src",
    "codeship:decrypt": "./deployment/crypto.sh decrypt ./deployment/encrypted ./deployment/secrets",
    "codeship:encrypt": "./deployment/crypto.sh encrypt ./deployment/secrets ./deployment/encrypted",
    "test": "npm-run-all test:*",
    "test:lint": "eslint src",
    "test:unit": "jest"
  },
  "author": "Christopher Turner <ct@propelleraero.com.au>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.2",
    "npm-run-all": "^4.1.2"
  }
}
